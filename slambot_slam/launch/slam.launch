<launch>

	<!-- select SLAM -->
	<arg name="slam_mode" default="cartographer"/>
	<!--	<arg name="slam_mode" default="gmapping"/> -->

	<arg name="model" default="$(find slambot_description)/urdf/slambot.urdf.xacro"/>

	<group ns="slambot_host">
		<param name="robot_description" command="$(find xacro)/xacro.py $(arg model)"/>

		<!-- convert joint states to TF transforms for rviz, etc -->
		<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
			respawn="false" output="screen">
				<remap from="joint_states" to="/slambot_hw/joint_states" />
				<remap from="robot_description" to="robot_description" />
		</node>

		<node pkg="nodelet" type="nodelet" name="laserscan_nodelet_manager" args="manager"/>
		<node pkg="nodelet" type="nodelet" name="depthimage_to_laserscan"
			args="load depthimage_to_laserscan/DepthImageToLaserScanNodelet laserscan_nodelet_manager"
			respawn="true">
			<param name="scan_height" value="10"/>
			<param name="output_frame_id" value="xtion_pro_live_depth_frame"/>
			<param name="range_min" value="0.45"/>

			<remap from="image" to="/slambot_hw/xtion_pro_live/depth_registered/image_raw"/>
			<remap from="camera_info" to="/slambot_hw/xtion_pro_live/depth_registered/camera_info"/>
			<remap from="scan" to="xtion_pro_live/scan"/>
		</node>

		<!-- SLAM -->
		<include file="$(find slambot_slam)/launch/slam/$(arg slam_mode).launch">
			<arg name="scan_topic" value="/slambot_host/xtion_pro_live/scan" />
			<arg name="odom_topic" value="/slambot_hw/diff_drive_controller/odom" />
		</include>
	</group>

</launch>
