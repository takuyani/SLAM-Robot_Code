<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro"
       name="slambot">

  <xacro:include filename="$(find robot_description)/urdf/slambot_properties.urdf.xacro"/>
  <xacro:include filename="$(find robot_description)/urdf/sensors/xtion_pro_live/xtion_pro_live.urdf.xacro"/>


  <!-- Robot Body -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.400 0.200 0.100"/>
      </geometry>
    </visual>
 
    <collision>
      <geometry>
        <box size="0.400 0.200 0.100"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.500"/>
      <inertia ixx="0.0020833333" ixy="0" ixz="0" iyy="0.0070833333" iyz="0" izz="0.0083333333"/>
    </inertial>
  </link>
  

 
  <sensor_xtion_pro_live          parent="base_link" name="sensor_xtion_pro_live"/>

</robot>

